<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 100;
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.5s ease-in-out;
  }

  .group:hover .group-hover\\:animate-fadein {
    z-index: 10;
  }
  @keyframes heartAnimation {
